    "hyprland/window": {
        "format": "{}",
        "icon": true
    },
    "tray": {
        "spacing": 10
    },
    "clock": {
        "format": "{:%I:%M%p}",
        // "timezone": "America/New_York",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%a %b %d %I:%M%p}"
    },
    "temperature": {
        //"thermal-zone": 2,
        "hwmon-path": "/sys/class/hwmon/hwmon4/temp1_input",
        "critical-threshold": 85,
        "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C {icon}",
        "tooltip": false,
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"],
    },
    "network": {
        "format-wifi": "{signalStrength}% Ôá´",
        "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
        "tooltip-format": "{essid} ({signalStrength}%) | IP: {ipaddr}",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{essid} ({signalStrength}%) Ôá´"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        "format-muted": "{volume}% Ôö©",
        //"format-muted": "{volume}% üîá",
        //"format-source": "{volume}% ÔÑ∞",
        //"format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "headset": "ÔÄ•",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "on-click-right": "pavucontrol"
    },
    "mpris": {
        "format": " {player_icon} {artist} - {title} ",
        "format-paused": "{status_icon} <i>{artist} - {title}</i> ",
        "tooltip-format": "{dynamic}",
        "dynamic-order": ["artist", "title", "album", "position", "lengt"],
        "dynamic-importance-order": ["artist", "title", "album", "position", "lengt"],
        "artist-len": 30,
        "title-len": 30,
        "player-icons": {
	          "default": "‚ñ∂Ô∏è"
	      },
	      "status-icons": {
	          "paused": "‚è∏Ô∏è"
	      }
    },
    "custom/power": {
        "format" : "‚èª ",
		"tooltip": false,
		"menu": "on-click",
		"menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
		"menu-actions": {
			"shutdown": "shutdown",
			"reboot": "reboot",
			"logout": "hyprctl dispatch exit",
			"suspend": "systemctl suspend",
			"hibernate": "systemctl hibernate"
		  }
    },
    "custom/weather": {
      "tooltip": false,
      "interval": 3600,
      "exec": "curl -s https://wttr.in/?format=1&period=60"
    }
}
