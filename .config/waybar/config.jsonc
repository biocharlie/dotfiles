    "hyprland/window": {
        //"format": "{}",
        "format": "<span font='9' rise='-4444'>{}</span>", // so it looks more centered
        "icon": true
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        "format": "{:%a%b%d %I:%M%p}",
        // "timezone": "America/New_York",
        "tooltip-format": "<tt><small>{calendar}</small></tt>"
        //"format-alt": "{:%Y-%m-%d %R}"
    },
    "temperature": {
        //"thermal-zone": 2,
        "hwmon-path": "/sys/class/hwmon/hwmon4/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{essid} ({signalStrength}%) Ôá´",
        "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
        "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}: {ipaddr}/{cidr}"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        //"format": "{volume}% {icon} {format_source}",
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî {format_source}",
        //"format-muted": "Ôö© {format_source}",
        "format-muted": "{volume}% Ôö©",
        //"format-source": "{volume}% ÔÑ∞",
        //"format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "headset": "ÔÄ•",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "on-click-right": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"
    },
    "mpris": {
        "format": "{player_icon} {artist} - {title} ",
        "format-paused": "{status_icon} <i>{artist} - {title}</i>",
        "tooltip-format": "{dynamic}",
        "dynamic-order": ["artist", "title", "album", "position", "lengt"],
        "dynamic-importance-order": ["artist", "title", "album", "position", "lengt"],
        "artist-len": 20,
        "title-len": 20,
            "player-icons": {
	        "default": "‚ñ∂",
	        "mpv": "üéµ"
	    },
	    "status-icons": {
	        "paused": "‚è∏"
	    },
	    // "ignored-players": ["firefox"]
    },
    "custom/power": {
        "format" : " ‚èª ",
		"tooltip": false,
		"menu": "on-click",
		"menu-file": "$HOME/.config/waybar/power_menu.xml", // Menu file in resources folder
		"menu-actions": {
			"shutdown": "shutdown",
			"reboot": "reboot",
      "logout": "hyprctl dispatch exit",
			"suspend": "systemctl suspend",
			"hibernate": "systemctl hibernate"
		  }
    },
    "custom/weather": {
      "tooltip": false,
      "interval": 3600,
      "exec": "curl -s https://wttr.in/?format=2&period=60"
    }
}
