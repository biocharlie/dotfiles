    "spacing": 1, // Gaps between modules (4px)
    //Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-center": [
        "mpris",
        "custom/weather"
    ],
    "modules-right": [
        "temperature",
        "network",
        "pulseaudio",
        "tray",
        "clock",
        "custom/power"
    ],
